#!/bin/env bash

set -e

repos=$(gh repo list --source --no-archived --json nameWithOwner --jq ".[].nameWithOwner" | rg nvim | sort)
repos="$repos folke/github LazyVim/LazyVim"
for repo in $repos; do
  echo "Status $repo"
  # strip owner
  dir=$HOME/projects/$(echo "$repo" | cut -d'/' -f2)
  git -C "$dir" status -sb
done
